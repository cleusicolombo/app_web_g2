<h1>Livros de Usuários Cadastrados</h1>

<table>
  <tr>
    <th>Usuário</th>
    <th>Título do Livro</th>
    <th>Valor</th>
    <th>Ações</th>
  </tr>

<% @usersbooks.each do |usersbook| %>
  <tr>
    <td><%= usersbook.users_id %></td>
    <td><%= usersbook.books_id %></td>
    <td><%= usersbook.value %></td>
    <td><%= link_to 'Ver', usersbook %>
    <%= link_to 'Editar', edit_usersbook_path(usersbook) %>
    <%= link_to 'Destruir', usersbook, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'Novo Livro de Usuário', new_usersbook_path %></p>
<p><%= link_to "Capa", root_path %></p>
<p><%= link_to "Usuários", users_path %></p>
<p><%= link_to "Livros", books_path %></p>
