<h2>Cadastro de Usuários</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name,"Nome" %><br />
  <%= f.text_field :name %></div>
     
  <div><%= f.label :email,"E-mail" %><br />
  <%= f.text_field :email %></div>

  <div><%= f.label :login,"Login" %><br />
  <%= f.text_field :login %></div>

  <div><%= f.label :password,"Senha" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation,"Confirme a senha" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Cadastrar" %></div>
<% end %>

